@model IEnumerable<Visitas.Models.CargosLaborales>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Co_Cargo_Laboral)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.No_Cargo_Laboral)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Co_Cargo_Laboral)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.No_Cargo_Laboral)
                </td>
                <td>
                    <a href="#" onclick="visitas.getModal('@Url.Action("Edit", new { id = item.Id})'); return false;";
                       data-toggle="modal" data-target="#modal-container" class="btn btn-warning btn-sm">
                        <span class="glyphicon glyphicon-edit"></span> 
                    </a>
                    <a href="#" onclick="visitas.getModal('@Url.Action("Details", new { id = item.Id})'); return false;";
                       data-toggle="modal" data-target="#modal-container" class="btn btn-primary btn-sm">
                        <span class="glyphicon glyphicon-search"></span> 
                    </a>
                    <a href="#" onclick="visitas.getModal('@Url.Action("Delete", new { id = item.Id})'); return false;";
                       data-toggle="modal" data-target="#modal-container" class="btn btn-danger btn-sm">
                        <span class="glyphicon glyphicon-trash"></span> 
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
